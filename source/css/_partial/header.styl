

.intro-header
  background-color gray
  background-position center center
  background-attachment scroll
  @extend .background-cover
  margin-bottom 50px
  .site-heading, .post-heading, .page-heading
    padding 85px 0 55px
    color white
    @media only screen and (min-width: 768px)
      padding 150px 0
    &.archives
      color brand-primary
      margin-top 60px
  .site-heading, .page-heading
    text-align center
    h1
      margin-top 0
      font-size 50px
    .subheading
      @extend .sans-serif
      font-size 18px
      line-height 1.1
      display block
      font-weight 300
      margin 10px 0 0
    @media only screen and (min-width: 768px)
      h1
        font-size 80px
  .post-heading
    .post-tag-category
      @extend .sans-serif
      font-size 16px
      font-weight 500
      color white
      a
        color: white
    h1
      font-size 35px
    .subheading, .meta
      line-height 1.1
      display block
    .subheading
      @extend .sans-serif
      font-size 17px
      margin 10px 0 30px
      font-weight 600
    .meta
      @extend .serif
      // font-style italic
      font-weight 300
      font-size 15px
      a
        color white
    @media only screen and (min-width: 768px)
      .post-tag-category
        font-size 25px
      h1
        font-size 55px
      .subheading
        font-size 30px
      .meta
        font-size 20px
