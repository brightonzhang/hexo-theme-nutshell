.post-archive
.post-preview
  > a
    color gray-dark
    &:hover, &:focus
      text-decoration none
      color brand-primary
    > .post-title
      font-size: 21px
      line-height: 1.3
      margin-top: 30px
      margin-bottom: 8px
      &.archive
        @extend .sans-serif
        margin-top: 1em
        font-size 18px
        font-weight: 400
    > .post-subtitle
      font-size: 15px
      line-height: 1.3
      margin 0
      font-weight 300
      margin-bottom 10px
    > .post-content-preview
      font-size: 13px;
      font-style: italic;
  > .post-tag-category
    color gray
    font-size 14px
  > .post-meta
    color gray
    font-size 14px
    margin-top 0
    &.archive
      font-size 14px
    > a
      text-decoration none
      color gray-dark
      &:hover, &:focus
        color brand-primary
        text-decoration underline
  @media only screen and (min-width: 768px)
    > a
      > .post-title
        font-size 26px
      > .post-subtitle
        font-size: 18px
      > .post-content-preview
        font-size: 14px
    > .post-tag-category
      font-size 16px
    > .post-meta
      font-size 16px
      
.tag-posts
.category-posts
  .post-archive
    margin-top: 18px
    margin-bottom: 8px


.post-tag-category
  overflow: hidden;
  .post-tag-list
    padding: 0
    margin: 0
    .post-tag-list-item
      float: left
      display: inline-block;
      margin-right: 8px;
      .post-tag-list-link
        &:before
          content: "#"
  .post-category
    float: right 
    margin-left: 8px
    .post-category-link
      text-decoration: underline
      &:before
        content: ">"




