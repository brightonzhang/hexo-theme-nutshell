
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            
            <!-- Post Main Content -->
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <%- post.content %>
            </div>

            <!-- Comments -->
            <% if (post.comment != false) { %>
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <%- partial("_partial/comments") %>
                </div>
            <% } %>
        </div>
    </div>
</article>