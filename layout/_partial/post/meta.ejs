<p class="post-meta">
    <!-- Date and Author -->
    Posted 
    <% if(post.author) { %>
        by <%- post.author %> 
    <% } %>

    on  <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, config.date_format) %></time>

    <% if (! post.updated.isSame(post.date, 'day')){ %>
        , last updated on <time datetime="<%= date_xml(post.updated) %>" itemprop="dateUpdated"><%= date(post.updated, config.date_format) %></time>
    <% } %>
</p>